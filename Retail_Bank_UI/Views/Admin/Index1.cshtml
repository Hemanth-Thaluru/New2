@model IEnumerable<AccountMicroservice.Model.Account>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="font-weight-bolder d-flex bg-transparent border-bottom" style="height:50px">
    <div class="pt-2  font-italic font-weight-light">Welcome to SRF Bank</div>
    <div class="p-2  ml-auto" style="color: #2b6dad">Hai @TempData["UserName"]</div>
</div>

<table style="width:100%" class="table table-bordered table-hover">
    <thead style="background-color: #2b6dad" class="text-white">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerId)
            </th>
            <th>
                Account Number
            </th>
            <th>
                @Html.DisplayNameFor(model => model.accountType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Balance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinBalance)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
<tr>

    <td>
        <a asp-controller="CustomerDetails" asp-action="Index" asp-route-CustomerId="@item.CustomerId">
            @Html.DisplayFor(modelItem => item.CustomerId)
        </a>
    </td>

    <td>
        @if (item.Cur_AccountId == 0)
        {
@Html.DisplayFor(modelItem => item.Sav_AccountId) }
else
{
@Html.DisplayFor(modelItem => item.Cur_AccountId)                }
        @*<a asp-controller="CustomerDetails" asp-action="Index" asp-route-AccountId="@item.Sav_AccountId">
                @Html.DisplayFor(modelItem => item.Sav_AccountId)
            </a>*@
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.accountType)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Balance)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MinBalance)
    </td>


</tr>
}
    </tbody>
</table>
